schema {
  query: Query
  mutation: Mutation
}

type Query {
  task(id: Int!): Task
  tasks: [Task]
}

type Task @key(fields: "id") {
  id: Int!
  task: String!
  user: User
}

extend type User @key(fields: "id") {
  id: Int! @external
  tasks: [Task]
}

type Mutation {
  createTask(input: NewTask!): Task
}

input NewTask {
  task: String!
  userId: Int!
}
